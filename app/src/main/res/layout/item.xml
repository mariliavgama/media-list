<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title_font_size"
        android:layout_marginStart="@dimen/list_item_margin_big"
        android:layout_marginLeft="@dimen/list_item_margin_big"
        android:layout_marginTop="@dimen/list_item_margin_small"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/item_byline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/byline_font_size"
        android:layout_marginStart="@dimen/list_item_margin_big"
        android:layout_marginLeft="@dimen/list_item_margin_big"
        android:layout_marginTop="@dimen/list_item_margin_medium"
        android:layout_marginBottom="@dimen/list_item_margin_small"/>
</LinearLayout>